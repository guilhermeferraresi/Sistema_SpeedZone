@model IEnumerable<Sistema_SpeedZone.Models.Pintura>

@{
    ViewData["Title"] = "Personalizacao";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Speed Zone</title>
    <link rel="stylesheet" href="/css/personalizacao.css" />
</head>
<body class="personalizacao-page">
    <div class="personalizacao-bg" aria-hidden="true"></div>
    <div class="custom-wrapper">
        <header class="barra-topo">
            <a asp-controller="Home" asp-action="Index"><img class="logo-marca" src="/img/logo.png" alt="Speed Zone" /></a>
            <a asp-controller="Usuario" asp-action="Login"><img class="avatar-perfil" src="/img/perfil.png" alt="Perfil do usuário" /></a>
        </header>

        <aside class="custom-menu">
            <div class="custom-menu__heading">
                <span class="custom-menu__title custom-menu__title--active">INTERIOR</span>
                <span class="custom-menu__title custom-menu__title--underline">EXTERIOR</span>
            </div>
            <div class="custom-menu__items">
                <div class="custom-menu__item" data-trigger-pintura>
                    <img src="/img/pinturaicon.png" alt="Pintura" />
                    <span>PINTURA</span>
                </div>
                <div class="custom-menu__item">
                    <img src="/img/tetoicon.png" alt="Teto" />
                    <span>TETO</span>
                </div>
                <div class="custom-menu__item">
                    <img src="/img/pneusicon.png" alt="Pneus" />
                    <span>PNEUS</span>
                </div>
                <div class="custom-menu__item">
                    <img src="/img/bodykitsicon.png" alt="Bodykits" />
                    <span>BODYKITS</span>
                </div>
            </div>
            <a asp-controller="Pedido" asp-action="Resumo"><button class="custom-menu__cta" type="button">FINALIZAR COMPRA</button></a>
        </aside>
    </div>

    <div class="custom-paint">
        <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
        <div class="custom-paint__swatches">
            @foreach (var item in Model)
            {
                <span class="custom-swatch" data-color="cinza-1" style="background: #@Html.DisplayFor(modelItem => item.Codigo);"></span>
            }
        </div>
        <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div
    <div class="custom-dashboard">
      <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
      <div class="custom-dashboard__swatches">
        <span class="custom-dash custom-dash--active" data-dash="painel1" style="background-image: url('img/painel1.jfif');"></span>
        <span class="custom-dash" data-dash="painel2" style="background-image: url('img/painel2.jfif');"></span>
        <span class="custom-dash" data-dash="painel3" style="background-image: url('img/painel3.jfif');"></span>
      </div>
      <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div>

    <div class="custom-wheels">
      <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
      <div class="custom-wheels__swatches">
        <span class="custom-wheel custom-wheel--active" data-wheel="roda1" style="background-image: url('img/roda1.png');"></span>
        <span class="custom-wheel" data-wheel="roda2" style="background-image: url('img/roda2.png');"></span>
        <span class="custom-wheel" data-wheel="roda3" style="background-image: url('img/roda3.png');"></span>
      </div>
      <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div>

    <div class="custom-roofs">
      <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
      <div class="custom-roofs__swatches">
        <span class="custom-roof custom-roof--active" data-roof="teto1" style="background-image: url('img/teto1.png');"></span>
        <span class="custom-roof" data-roof="teto2" style="background-image: url('img/teto2.png');"></span>
      </div>
      <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div>

    <div class="custom-color">
      <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
      <div class="custom-color__swatches">
        <span class="custom-color__swatch custom-color__swatch--active" data-color-option="preto" style="background: #000000;"></span>
        <span class="custom-color__swatch" data-color-option="azul" style="background: #3d7484;"></span>
        <span class="custom-color__swatch" data-color-option="marrom" style="background: #4f4b2d;"></span>
        <span class="custom-color__swatch" data-color-option="vermelho" style="background: #832728;"></span>
        <span class="custom-color__swatch" data-color-option="branco" style="background: #cfcabb;"></span>
      </div>
      <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div>

    <div class="custom-seat">
      <button class="custom-paint__arrow" type="button" aria-label="Anterior">‹</button>
      <div class="custom-seat__swatches">
        <span class="custom-seat__swatch custom-seat__swatch--active" data-seat="banco1" style="background-image: url('img/banco1.jfif');"></span>
        <span class="custom-seat__swatch" data-seat="banco2" style="background-image: url('img/banco2.jfif');"></span>
        <span class="custom-seat__swatch" data-seat="banco3" style="background-image: url('img/banco3.jfif');"></span>
      </div>
      <button class="custom-paint__arrow" type="button" aria-label="Próximo">›</button>
    </div>

    <script src="/js/personalizacao.js"></script>
</body>
</html>
