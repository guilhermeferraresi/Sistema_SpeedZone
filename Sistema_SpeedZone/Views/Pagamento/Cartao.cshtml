@model Sistema_SpeedZone.Models.Cartao;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Speed Zone</title>
    <link rel="stylesheet" href="/css/cartao.css" />
</head>
<body class="endereco-page">
    <header class="compra-topo">
        <img src="/img/logo.png" alt="Speed Zone" class="compra-logo" />
    </header>
    <div class="endereco-shell">
        <div class="endereco-form">
            <p class="endereco-legenda">FORMA DE PAGAMENTO</p>
            <form asp-action="Cartao" method="post">
                <label class="endereco-label" for="cep">NÚMERO DO CARTÃO</label>
                <input asp-for="NumeroCartao" class="endereco-input" type="text" id="cep" name="cep" placeholder="Digite o número do seu cartão" required/>

                <label class="endereco-label" for="rua">NOME NO CARTÃO</label>
                <input asp-for="Nome" class="endereco-input" type="text" id="rua" name="rua" placeholder="Digite o nome no seu cartão" required />

                <label class="endereco-label" for="rua">BANDEIRA</label>
                <input asp-for="Bandeira" class="endereco-input" type="text" id="rua" name="rua" placeholder="Digite o nome no seu cartão" required />

                <label class="endereco-label" for="numero">VALIDADE</label>
                <input asp-for="Validade" class="endereco-input" type="text" id="numero" name="numero" placeholder="Digite a validade do seu cartão" required />

                <label class="endereco-label" for="complemento">CVV</label>
                <input asp-for="CVV" class="endereco-input" type="text" id="complemento" name="complemento" placeholder="Digite o CVV do seu cartão" required />

                <div class="endereco-actions">
                    <a asp-controller="Pedido" asp-action="Compra" class="endereco-button">VOLTAR</a>
                    <button class="endereco-button" type="submit">FINALIZAR COMPRA</button>
                </div>
            </form>
        </div>

        <div class="endereco-brand">
            <img src="/img/cartaopagamento.png" alt="Cartão Pagamento" />
        </div>
    </div>

    <p class="endereco-tagline">Se puder ser comparado, não é nosso</p>
</body>
</html>