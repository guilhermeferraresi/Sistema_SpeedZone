<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Speed Zone</title>
    <link rel="stylesheet" href="/css/resumo.css" />
</head>
<body>

    <img class="img-destaque" src="/img/revueltofinal.jfif" alt="Lamborghini em destaque" />

    <header class="barra-topo">
        <img class="logo-marca" src="/img/logo.png" alt="Speed Zone" />
        <img class="avatar-perfil" src="/img/perfil.png" alt="Perfil do usuário" />
    </header>
    <div class="resumo-bloco-preto">
        <section class="resumo-ficha">
            <h2 class="resumo-ficha__titulo">FICHA TÉCNICA DO SEU REVUELTO</h2>
            <div class="resumo-tabs" role="tablist" aria-label="Seções do carro">
                <button class="resumo-tab resumo-tab--ativo" type="button" data-resumo-mode="exterior">EXTERIOR</button>
                <button class="resumo-tab" type="button" data-resumo-mode="interior">INTERIOR</button>
            </div>

            <div class="resumo-list resumo-list--exterior">
                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--vermelho" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">COR DA PINTURA</p>
                        <p class="resumo-valor">Rosso Mars - #AF2025</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--teto" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">PERSONALIZAÇÕES DO TETO</p>
                        <p class="resumo-valor">Teto preto</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--pneus" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">PERSONALIZAÇÕES DOS PNEUS</p>
                        <p class="resumo-valor">Aro preto</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-valor resumo-valor--pinça">BODYKIT</p>
                        <p class="resumo-valor">Nenhum</p>
                    </div>
                </div>
            </div>

            <div class="resumo-list resumo-list--interior resumo-list--hidden">
                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--painel" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">PERSONALIZAÇÃO DO PAINEL</p>
                        <p class="resumo-valor">Entradas de ar</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--cor-interior" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">COR DO INTERIOR</p>
                        <p class="resumo-valor">Vermelho</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--banco" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">TIPO DE BANCO</p>
                        <p class="resumo-valor">Banco esportivo</p>
                    </div>
                </div>

                <div class="resumo-item">
                    <div class="resumo-swatch resumo-swatch--costura" aria-hidden="true"></div>
                    <div class="resumo-textos">
                        <p class="resumo-label">COSTURA</p>
                        <p class="resumo-valor">Nenhum</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="resumo-card">
            <div class="resumo-card__faixa">
                <span class="faixa verde"></span>
                <span class="faixa branca"></span>
                <span class="faixa vermelha"></span>
            </div>
            <img class="resumo-card__carro" src="/img/revuelto.png" alt="Lamborghini" />

            <div class="resumo-card__dados">
                <div class="resumo-coluna">
                    <p class="resumo-coluna__titulo">Cavalos de Potência</p>
                    <p class="resumo-coluna__valor">1015cv</p>
                </div>
                <div class="resumo-coluna">
                    <p class="resumo-coluna__titulo">Torque</p>
                    <p class="resumo-coluna__valor">77,0 kgfm</p>
                </div>
                <div class="resumo-coluna">
                    <p class="resumo-coluna__titulo">Motor</p>
                    <p class="resumo-coluna__valor">v12</p>
                </div>
            </div>

            <div class="resumo-card__acoes">
                <a class="resumo-card__btn" asp-controller="Personalizacao" asp-action="Personalizacao">PERSONALIZAR</a>
                <a class="resumo-card__btn" href="#">GERAR PDF</a>
            </div>
            <a class="resumo-card__btn resumo-card__btn--full" asp-controller="Pedido" asp-action="Compra">FINALIZAR COMPRA</a>
        </section>
    </div>
    <footer class="navegacao-inferior" aria-label="Menu principal">
        <a class="rotulo-menu" asp-controller="Home" asp-action="Index">MENU</a>
    </footer>
    <script>
        (function () {
          const tabs = Array.from(document.querySelectorAll(".resumo-tab"));
          const listExterior = document.querySelector(".resumo-list--exterior");
          const listInterior = document.querySelector(".resumo-list--interior");

          tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
              tabs.forEach((t) => t.classList.remove("resumo-tab--ativo"));
              tab.classList.add("resumo-tab--ativo");

              const mode = tab.dataset.resumoMode;
              if (mode === "interior") {
                listInterior?.classList.remove("resumo-list--hidden");
                listExterior?.classList.add("resumo-list--hidden");
              } else {
                listExterior?.classList.remove("resumo-list--hidden");
                listInterior?.classList.add("resumo-list--hidden");
              }
            });
          });
        })();
    </script>
</body>
</html>