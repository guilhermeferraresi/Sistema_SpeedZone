@model Sistema_SpeedZone.Models.Usuario
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Speed Zone</title>
    <link rel="stylesheet" href="/css/login.css" />
</head>
<body class="login-page">
    <div class="login-shell">
        @if (ViewData["MSG_E"] != null)
        {
            <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
        }
        <a asp-controller="Home" asp-action="Index"><img class="login-logo" src="/img/logo.png" alt="Speed Zone" /></a>
        <h1 class="login-title">BEM-VINDO DE VOLTA</h1>
        <form class="login-form" asp-controller="Usuario" asp-action="Login"  method="post">
            <label class="login-label" for="email">EMAIL</label>
            <input class="login-input" type="email" id="email" name="email" asp-for="Email" placeholder="Digite seu email" />

            <label class="login-label" for="senha">SENHA</label>
            <input class="login-input" type="password" id="senha" name="senha" asp-for="Senha" placeholder="Digite sua senha" />

            <a class="login-link" asp-controller="Usuario" asp-action="Cadastrar">AINDA NÃO TEM UMA CONTA? CLIQUE AQUI</a>

            <button class="login-button" type="submit">CONECTAR</button>
        </form>
        <p class="login-tagline">Se puder ser comparado, não é nosso</p>
    </div>
</body>
</html>