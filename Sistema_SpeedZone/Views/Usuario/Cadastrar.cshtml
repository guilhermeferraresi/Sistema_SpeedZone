@model Sistema_SpeedZone.Models.Usuario;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Speed Zone</title>
    <link rel="stylesheet" href="/css/cadastro.css" />
</head>
<body class="cadastro-page">
    <div class="cadastro-shell">
        <div class="cadastro-form">
            <form asp-action="Cadastrar" method="post">

                <div id="parteFormUm" class="visivel">
                    <p class="cadastro-legenda">INFORMAÇÕES DO CLIENTE</p>

                    <label asp-for="Nome">NOME COMPLETO</label>
                    <input asp-for="Nome" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Nome"></span>

                    <label asp-for="CPF">CPF</label>
                    <input asp-for="CPF" class="cadastro-input" type="text" required />
                    <span asp-validation-for="CPF"></span>

                    <label asp-for="RG">RG</label>
                    <input asp-for="RG" class="cadastro-input" type="text" required />
                    <span asp-validation-for="RG"></span>

                    <label asp-for="Nascimento">DATA DE NASCIMENTO</label>
                    <input asp-for="Nascimento" class="cadastro-input" type="date" required />
                    <span asp-validation-for="Nascimento"></span>

                    <label asp-for="Telefone">TELEFONE</label>
                    <input asp-for="Telefone" class="cadastro-input" type="tel" required />
                    <span asp-validation-for="Telefone"></span>
                </div>

                <div id="parteFormDois" class="invisivel">
                    <p class="cadastro-legenda">INFORMAÇÕES DE ENDEREÇO</p>

                    <label asp-for="CEP">CEP</label>
                    <input asp-for="CEP" class="cadastro-input" type="text" required />
                    <span asp-validation-for="CEP"></span>

                    <label asp-for="Numero">NÚMERO</label>
                    <input asp-for="Numero" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Numero"></span>

                    <label asp-for="Rua">Rua</label>
                    <input asp-for="Rua" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Rua"></span>

                    <label asp-for="Cidade">Cidade</label>
                    <input asp-for="Cidade" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Cidade"></span>

                    <label asp-for="Estado">Estado</label>
                    <input asp-for="Estado" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Estado"></span>

                    <label asp-for="Complemento">COMPLEMENTO</label>
                    <input asp-for="Complemento" class="cadastro-input" type="text" required />
                    <span asp-validation-for="Complemento"></span>
                </div>

                <div id="parteFormTres" class="invisivel">
                    <p class="cadastro-legenda">INFORMAÇÕES DE REGISTRO</p>

                    <label asp-for="Email">EMAIL</label>
                    <input asp-for="Email" class="cadastro-input" type="email" required />
                    <span asp-validation-for="Email"></span>

                    <label asp-for="Senha">SENHA</label>
                    <input asp-for="Senha" class="cadastro-input" type="password" required />
                    <span asp-validation-for="Senha"></span>

                    <!--<label>CONFIRMAR SENHA</label>
                    <input asp-for="ConfSenha" class="cadastro-input" type="password" name="ConfirmaSenha" />-->
                    
                    <button class="cadastro-button" type="submit">FINALIZAR</button>
                </div>
            </form>

            <div class="dBotoesCad">
                <button id="cadastro-button-voltar" class="invisivel">Voltar</button>
                <button id="cadastro-button-continuar" class="visivel">CONTINUAR</button>
            </div>

        </div>

        <div class="cadastro-brand">
            <img class="img-cadastro" src="/img/logo.png" alt="Speed Zone" />
        </div>
    </div>

    <p class="cadastro-tagline">Se puder ser comparado, não é nosso</p>
</body>
<script src="/js/cadastro.js"></script>
</html>

